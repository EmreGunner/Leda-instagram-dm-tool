// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // Used for migrations (bypasses connection pooler)
}

// ============================================================================
// Core Multi-Tenant Models
// ============================================================================

model Workspace {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  users                   User[]
  instagramAccounts       InstagramAccount[]
  contacts                Contact[]
  campaigns               Campaign[]
  notificationPreferences NotificationPreference[]
  notifications           Notification[]
  automations            Automation[]
  leads                   Lead[]
  leadLists               LeadList[]
  targetAccounts          TargetAccount[]
  accountQueues           AccountQueue[]
  scrapingAccounts        ScrapingAccount[]
  scrapedPosts            ScrapedPost[]
  scrapingJobs            ScrapingJob[]
  scrapingConfig          ScrapingConfig?

  @@map("workspaces")
}

model User {
  id              String    @id @default(uuid())
  email           String    @unique
  supabaseAuthId String?   @unique @map("supabase_auth_id") // Links to Supabase auth.users.id
  passwordHash    String?   @map("password_hash")
  name            String?
  firstName       String?   @map("first_name")
  lastName        String?   @map("last_name")
  phone           String?
  timezone        String?   @default("America/New_York")
  bio             String?
  avatarUrl       String?   @map("avatar_url")
  emailVerified   DateTime? @map("email_verified")
  magicToken      String?   @map("magic_token")
  magicTokenExp   DateTime? @map("magic_token_exp")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  workspaceId String    @map("workspace_id")
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  role                    UserRole                 @default(MEMBER)
  notificationPreferences NotificationPreference[]
  notifications           Notification[]
  validatedAccounts       ScrapingAccount[]        @relation("ValidatedAccounts")
  addedAccounts           ScrapingAccount[]        @relation("AddedAccounts")

  @@index([workspaceId])
  @@index([supabaseAuthId])
  @@map("users")
}

enum UserRole {
  OWNER
  ADMIN
  MEMBER
}

// ============================================================================
// Instagram Integration Models
// ============================================================================

model InstagramAccount {
  id                   String    @id @default(uuid())
  igUserId             String    @map("ig_user_id") // Instagram Business Account ID
  igUsername           String    @map("ig_username")
  fbPageId             String    @map("fb_page_id") // Linked Facebook Page ID
  accessToken          String    @map("access_token") // Encrypted long-lived token
  accessTokenExpiresAt DateTime? @map("access_token_expires_at")
  permissions          String[] // Granted permissions from OAuth
  profilePictureUrl    String?   @map("profile_picture_url")
  isActive             Boolean   @default(true) @map("is_active")
  webhookSubscribed    Boolean   @default(false) @map("webhook_subscribed")
  dailyDmLimit         Int       @default(100) @map("daily_dm_limit")
  dmsSentToday         Int       @default(0) @map("dms_sent_today")
  dmLimitResetAt       DateTime? @map("dm_limit_reset_at")
  cookies              Json?     // Instagram session cookies stored as JSONB for persistent authentication
  createdAt            DateTime  @default(now()) @map("created_at")
  updatedAt            DateTime  @updatedAt @map("updated_at")

  workspaceId String    @map("workspace_id")
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  conversations Conversation[]
  campaigns     Campaign[]
  automations   Automation[]
  leads         Lead[]
  campaignAccounts CampaignAccount[]
  assignedRecipients CampaignRecipient[]
  dailyMessageCounts AccountDailyMessageCount[]

  @@unique([igUserId, workspaceId])
  @@index([workspaceId])
  @@map("instagram_accounts")
}

// ============================================================================
// Contact & Messaging Models
// ============================================================================

model Contact {
  id                String   @id @default(uuid())
  igUserId          String   @map("ig_user_id") // Instagram user ID of the contact
  igUsername        String?  @map("ig_username")
  name              String?
  bio               String?
  profilePictureUrl String?  @map("profile_picture_url")
  followerCount     Int?     @map("follower_count")
  isVerified        Boolean  @default(false) @map("is_verified")
  tags              String[] // Custom tags for segmentation
  notes             String?
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  workspaceId String    @map("workspace_id")
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  conversations      Conversation[]
  campaignRecipients CampaignRecipient[]

  @@unique([igUserId, workspaceId])
  @@index([workspaceId])
  @@index([igUsername])
  @@map("contacts")
}

model Conversation {
  id                 String             @id @default(uuid())
  igThreadId         String?            @map("ig_thread_id") // Instagram's thread ID if available
  status             ConversationStatus @default(OPEN)
  lastMessageAt      DateTime?          @map("last_message_at")
  unreadCount        Int                @default(0) @map("unread_count")
  isAutomationPaused Boolean            @default(false) @map("is_automation_paused")
  createdAt          DateTime           @default(now()) @map("created_at")
  updatedAt          DateTime           @updatedAt @map("updated_at")

  instagramAccountId String           @map("instagram_account_id")
  instagramAccount   InstagramAccount @relation(fields: [instagramAccountId], references: [id], onDelete: Cascade)

  contactId String  @map("contact_id")
  contact   Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)

  messages Message[]

  @@unique([instagramAccountId, contactId])
  @@index([instagramAccountId])
  @@index([contactId])
  @@index([status])
  @@index([lastMessageAt])
  @@map("conversations")
}

enum ConversationStatus {
  OPEN
  CLOSED
  SNOOZED
  ARCHIVED
}

model Message {
  id             String           @id @default(uuid())
  igMessageId    String?          @unique @map("ig_message_id") // Instagram's message ID
  content        String
  messageType    MessageType      @default(TEXT) @map("message_type")
  direction      MessageDirection
  status         MessageStatus    @default(PENDING)
  sentAt         DateTime?        @map("sent_at")
  deliveredAt    DateTime?        @map("delivered_at")
  readAt         DateTime?        @map("read_at")
  errorMessage   String?          @map("error_message")
  metadata       Json? // For attachments, quick replies, etc.
  aiGenerated    Boolean          @default(false) @map("ai_generated")
  campaignStepId String?          @map("campaign_step_id")
  createdAt      DateTime         @default(now()) @map("created_at")
  updatedAt      DateTime         @updatedAt @map("updated_at")

  conversationId String       @map("conversation_id")
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  campaignStep CampaignStep? @relation(fields: [campaignStepId], references: [id], onDelete: SetNull)

  @@index([conversationId])
  @@index([createdAt])
  @@index([status])
  @@map("messages")
}

enum MessageType {
  TEXT
  IMAGE
  VIDEO
  AUDIO
  STORY_REPLY
  STORY_MENTION
  QUICK_REPLY
}

enum MessageDirection {
  INBOUND
  OUTBOUND
}

enum MessageStatus {
  PENDING
  QUEUED
  SENT
  DELIVERED
  READ
  FAILED
}

// ============================================================================
// Campaign Models
// ============================================================================

model Campaign {
  id              String         @id @default(uuid())
  name            String
  description     String?
  status          CampaignStatus @default(DRAFT)
  targetAudience  Json?          @map("target_audience") // Filters for selecting contacts
  scheduledAt     DateTime?      @map("scheduled_at")
  startedAt       DateTime?      @map("started_at")
  completedAt     DateTime?      @map("completed_at")
  totalRecipients Int            @default(0) @map("total_recipients")
  sentCount       Int            @default(0) @map("sent_count")
  failedCount     Int            @default(0) @map("failed_count")
  replyCount      Int            @default(0) @map("reply_count")
  sendStartTime   DateTime?      @map("send_start_time") @db.Time
  sendEndTime     DateTime?      @map("send_end_time") @db.Time
  timezone        String?        @default("America/New_York")
  messagesPerDay  Int            @default(10) @map("messages_per_day")
  createdAt       DateTime       @default(now()) @map("created_at")
  updatedAt       DateTime       @updatedAt @map("updated_at")

  workspaceId String    @map("workspace_id")
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  instagramAccountId String?          @map("instagram_account_id") // Nullable for backward compatibility
  instagramAccount   InstagramAccount? @relation(fields: [instagramAccountId], references: [id], onDelete: Cascade)

  steps           CampaignStep[]
  recipients      CampaignRecipient[]
  campaignAccounts CampaignAccount[]

  @@index([workspaceId])
  @@index([instagramAccountId])
  @@index([status])
  @@map("campaigns")
}

enum CampaignStatus {
  DRAFT
  SCHEDULED
  RUNNING
  PAUSED
  COMPLETED
  CANCELLED
}

model CampaignStep {
  id              String   @id @default(uuid())
  stepOrder       Int      @map("step_order")
  name            String?
  messageTemplate String?  @map("message_template") // Deprecated: Use StepVariant instead. Kept for backward compatibility
  delayMinutes    Int      @default(0) @map("delay_minutes") // Deprecated: Use delayDays. Kept for backward compatibility
  delayDays       Int      @default(0) @map("delay_days") // Delay after previous step in days (follow-up only if no reply)
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  campaignId String   @map("campaign_id")
  campaign   Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  messages    Message[]
  variants    StepVariant[]

  @@index([campaignId])
  @@map("campaign_steps")
}

model StepVariant {
  id              String   @id @default(uuid())
  stepId          String   @map("step_id")
  messageTemplate String   @map("message_template") // Supports {{variable}} placeholders
  createdAt       DateTime @default(now()) @map("created_at")

  step CampaignStep @relation(fields: [stepId], references: [id], onDelete: Cascade)

  @@index([stepId])
  @@map("step_variants")
}

model CampaignRecipient {
  id               String                  @id @default(uuid())
  status           CampaignRecipientStatus @default(PENDING)
  currentStepOrder Int                     @default(0) @map("current_step_order")
  lastProcessedAt  DateTime?               @map("last_processed_at")
  nextProcessAt    DateTime?               @map("next_process_at") // Deprecated: Use nextActionAt. Kept for backward compatibility
  nextActionAt     DateTime?               @map("next_action_at") // When to process next action
  errorMessage     String?                 @map("error_message")
  assignedAccountId String?                @map("assigned_account_id")
  createdAt        DateTime                @default(now()) @map("created_at")
  updatedAt        DateTime                @updatedAt @map("updated_at")

  campaignId String   @map("campaign_id")
  campaign   Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  contactId String  @map("contact_id")
  contact   Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)

  assignedAccount InstagramAccount? @relation(fields: [assignedAccountId], references: [id], onDelete: SetNull)

  @@unique([campaignId, contactId])
  @@index([campaignId])
  @@index([contactId])
  @@index([status])
  @@index([nextProcessAt])
  @@index([nextActionAt])
  @@index([assignedAccountId])
  @@map("campaign_recipients")
}

enum CampaignRecipientStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  REPLIED
  FAILED
  UNSUBSCRIBED
}

model CampaignAccount {
  campaignId         String   @map("campaign_id")
  instagramAccountId String   @map("instagram_account_id")
  createdAt          DateTime @default(now()) @map("created_at")

  campaign         Campaign         @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  instagramAccount InstagramAccount @relation(fields: [instagramAccountId], references: [id], onDelete: Cascade)

  @@id([campaignId, instagramAccountId])
  @@index([campaignId])
  @@index([instagramAccountId])
  @@map("campaign_accounts")
}

model AccountDailyMessageCount {
  id                 String   @id @default(uuid())
  instagramAccountId String   @map("instagram_account_id")
  date               DateTime @db.Date
  messageCount       Int      @default(0) @map("message_count")
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")

  instagramAccount InstagramAccount @relation(fields: [instagramAccountId], references: [id], onDelete: Cascade)

  @@unique([instagramAccountId, date], name: "instagramAccountId_date")
  @@index([instagramAccountId])
  @@index([date])
  @@map("account_daily_message_count")
}

// ============================================================================
// Notification Models
// ============================================================================

model NotificationPreference {
  id        String           @id @default(uuid())
  type      NotificationType
  email     Boolean          @default(true)
  push      Boolean          @default(false)
  inApp     Boolean          @default(true) @map("in_app")
  createdAt DateTime         @default(now()) @map("created_at")
  updatedAt DateTime         @updatedAt @map("updated_at")

  workspaceId String    @map("workspace_id")
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  userId String? @map("user_id")
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, type, userId])
  @@index([workspaceId])
  @@index([userId])
  @@map("notification_preferences")
}

enum NotificationType {
  NEW_MESSAGE
  CAMPAIGN_COMPLETE
  NEW_FOLLOWER
  WEEKLY_REPORT
}

model Notification {
  id        String           @id @default(uuid())
  type      NotificationType
  title     String
  message   String
  read      Boolean          @default(false)
  metadata  Json? // Additional data (e.g., conversationId, campaignId)
  createdAt DateTime         @default(now()) @map("created_at")
  readAt    DateTime?        @map("read_at")

  workspaceId String    @map("workspace_id")
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([userId])
  @@index([read])
  @@index([createdAt])
  @@map("notifications")
}

// ============================================================================
// AI Automation Models
// ============================================================================

model Automation {
  id               String   @id @default(uuid())
  name             String
  description      String?
  triggerType      String   @map("trigger_type") // e.g., "New message", "Keyword match", "New follower"
  triggerKeywords  String[] @map("trigger_keywords") // Keywords to match for keyword-based triggers
  responseTemplate String?  @map("response_template") // AI-generated or custom response
  isActive         Boolean  @default(false) @map("is_active")
  messagesHandled  Int      @default(0) @map("messages_handled")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  workspaceId String    @map("workspace_id")
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  instagramAccountId String           @map("instagram_account_id")
  instagramAccount   InstagramAccount @relation(fields: [instagramAccountId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([instagramAccountId])
  @@index([isActive])
  @@map("automations")
}

// ============================================================================
// Lead Generation Models
// ============================================================================

model Lead {
  id                String   @id @default(uuid())
  igUserId          String   @map("ig_user_id")
  igUsername        String   @map("ig_username")
  fullName          String?  @map("full_name")
  bio               String?
  profilePicUrl     String?  @map("profile_pic_url")
  followerCount     Int?     @map("follower_count")
  followingCount    Int?     @map("following_count")
  postCount         Int?     @map("post_count")
  isVerified        Boolean  @default(false) @map("is_verified")
  isPrivate         Boolean  @default(false) @map("is_private")
  isBusiness        Boolean  @default(false) @map("is_business")
  externalUrl       String?  @map("external_url")
  status            String   @default("new")
  tags              String[]
  
  // Leads 2.0 Enhanced Fields
  propertyType      String?  @map("property_type") // e.g. "Villa", "Daire"
  propertySubType   String?  @map("property_sub_type") // e.g. "Villa", "Rezidence"
  listingType       String?  @map("listing_type") // e.g. "Sale", "Rent"
  city              String?  // e.g. "Istanbul"
  town              String?  // e.g. "Besiktas"
  commentCount      Int      @default(1) @map("comment_count") // Tracks multiple comments from same user
  postLink          String?  @map("post_link")
  postCaption       String?  @map("post_caption")
  commentLink       String?  @map("comment_link")
  commentDate       DateTime? @map("comment_date")

  notes             String?
  source            String?  // e.g., "hashtag", "followers", "username"
  sourceQuery       String?  @map("source_query")
  matchedKeywords   String[] @map("matched_keywords")
  
  // Lead scoring and enrichment
  leadScore         Float?   @map("lead_score") // AI-powered score 0-100
  engagementRate    Float?   @map("engagement_rate") // Calculated engagement rate
  accountAge        Int?     @map("account_age") // Account age in days
  postFrequency     Float?   @map("post_frequency") // Posts per week
  email             String?  // Enriched email if available
  phone             String?  // Enriched phone if available
  website           String?  // Enriched website if available
  location          String?  // Location from profile
  
  // Lead history tracking
  timesContacted    Int      @default(0) @map("times_contacted")
  lastContactedAt   DateTime? @map("last_contacted_at")
  lastInteractionAt DateTime? @map("last_interaction_at")
  dmSentAt          DateTime? @map("dm_sent_at")
  dmRepliedAt       DateTime? @map("dm_replied_at")
  
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  workspaceId String    @map("workspace_id")
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  instagramAccountId String?          @map("instagram_account_id")
  instagramAccount   InstagramAccount? @relation(fields: [instagramAccountId], references: [id], onDelete: SetNull)

  listMembers LeadListMember[]

  @@unique([igUserId, workspaceId])
  @@index([workspaceId])
  @@index([instagramAccountId])
  @@index([status])
  @@index([leadScore])
  @@index([createdAt])
  @@map("leads")
}

model LeadList {
  id            String   @id @default(uuid())
  name          String
  description   String?
  filterKeywords String[] @map("filter_keywords") // Keywords for auto-adding leads
  autoAdd       Boolean  @default(false) @map("auto_add") // Auto-add leads matching keywords
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  workspaceId String    @map("workspace_id")
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  members LeadListMember[]

  @@index([workspaceId])
  @@map("lead_lists")
}

model LeadListMember {
  id         String   @id @default(uuid())
  addedAt    DateTime @default(now()) @map("added_at")

  leadListId String   @map("lead_list_id")
  leadList   LeadList @relation(fields: [leadListId], references: [id], onDelete: Cascade)

  leadId String @map("lead_id")
  lead   Lead   @relation(fields: [leadId], references: [id], onDelete: Cascade)

  @@unique([leadListId, leadId])
  @@index([leadListId])
  @@index([leadId])
  @@map("lead_list_members")
}

// ============================================================================
// Tool Usage Tracking
// ============================================================================

model ToolUsage {
  id        String   @id @default(uuid())
  toolType  String   @map("tool_type") // e.g., "brand-matcher", "username-checker", etc.
  instaId   String?  @map("insta_id") // Instagram handle (when applicable)
  niche     String?  // Content niche (if applicable)
  formData  Json?    @map("form_data") // All form field data as JSON
  ipAddress String?  @map("ip_address") // Client IP address
  location  Json?    // IP geolocation data (city, region, country)
  createdAt DateTime @default(now()) @map("created_at")

  @@index([toolType])
  @@index([createdAt])
  @@map("tool_usage")
}

model JobQueue {
  id        String   @id @default(uuid())

  workspaceId String @map("workspace_id")
  campaignId  String? @map("campaign_id")
  leadId      String? @map("lead_id")

  // Required (matches NOT NULL)
  senderUsername String @map("sender_username")
  jobType        String @map("job_type")
  payload        Json
  scheduledAt    DateTime @map("scheduled_at")
  sentAt         DateTime? @map("sent_at") @db.Timestamptz(6)
  status         String   @default("QUEUED")

  // Optional snapshots (NULLABLE in Supabase)
  senderInstagramAccountId String? @map("sender_instagram_account_id")
  senderIgUserId           String? @map("sender_ig_user_id")
  senderIgUsername         String? @map("sender_ig_username")

  recipientUserId   String? @map("recipient_user_id")
  recipientUsername String? @map("recipient_username")
  recipientName     String? @map("recipient_name")

  campaignName String? @map("campaign_name")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([campaignId])
  @@index([workspaceId])
  @@index([status, scheduledAt])
  @@index([senderIgUserId])
  @@map("job_queue")
}

// ============================================================================
// Target Account Tracking (Agencies/Competitors)
// ============================================================================

model TargetAccount {
  id              String   @id @default(uuid())
  username        String
  fullName        String?  @map("full_name")
  biography       String?
  followerCount   Int?     @map("follower_count")
  followingCount  Int?     @map("following_count")
  postCount       Int?     @map("post_count")
  isVerified      Boolean  @default(false) @map("is_verified")
  isPrivate       Boolean  @default(false) @map("is_private")
  
  isTracked       Boolean  @default(true) @map("is_tracked")
  tags            String[] // e.g., "real_estate_agency"
  notes           String?
  
  lastScrapedAt   DateTime? @map("last_scraped_at")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  workspaceId     String    @map("workspace_id")
  workspace       Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([username, workspaceId])
  @@index([workspaceId])
  @@index([isTracked])
  @@map("target_accounts")
}

// ============================================================================
// Waiting List Model
// ================================================== // ============================================================================

model WaitingList {
  id                      String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email                   String?   @unique
  instagramId             String?   @map("instagram_id")
  message                 String?
  slackNotificationSent   Boolean   @default(false) @map("slack_notification_sent")
  slackNotificationSentAt DateTime? @map("slack_notification_sent_at")
  slackNotificationError  String?   @map("slack_notification_error")
  createdAt               DateTime  @default(now()) @map("created_at")

  @@map("waiting_list")
}

// ============================================================================
// Apify Account Queue
// ============================================================================

model AccountQueue {
  id                   String   @id @default(uuid())
  username             String
  fullName             String?  @map("full_name")
  biography            String?
  externalUrl          String?  @map("external_url")
  
  businessCategoryName String?  @map("business_category_name")
  businessAddress      String?  @map("business_address")
  isBusinessAccount    Boolean  @default(false) @map("is_business_account")
  
  followerCount        Int?     @map("follower_count")
  followingCount       Int?     @map("following_count")
  postCount            Int?     @map("post_count")
  
  profilePicUrl        String?  @map("profile_pic_url")
  isVerified           Boolean  @default(false) @map("is_verified")
  isPrivate            Boolean  @default(false) @map("is_private")
  
  status               String   @default("pending") // pending, processing, completed, error
  priority             Int      @default(0)
  
  createdAt            DateTime @default(now()) @map("created_at")
  updatedAt            DateTime @updatedAt @map("updated_at")

  workspaceId          String   @map("workspace_id")
  workspace            Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([status])
  @@index([priority])
  @@index([username])
  @@map("account_queue")
}

// ============================================================================
// Autonomous Scraping System
// ============================================================================

model ScrapingAccount {
  id                   String    @id @default(uuid())
  workspaceId          String    @map("workspace_id")
  workspace            Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  // Instagram Profile
  username             String
  fullName             String?   @map("full_name")
  biography            String?
  followerCount        Int?      @map("follower_count")
  followingCount       Int?      @map("following_count")
  postCount            Int?      @map("post_count")
  isVerified           Boolean   @default(false) @map("is_verified")
  isPrivate            Boolean   @default(false) @map("is_private")
  profilePicUrl        String?   @map("profile_pic_url")
  
  // Validation
  isValidated          Boolean   @default(false) @map("is_validated")
  isTracked            Boolean   @default(true) @map("is_tracked")
  validationStatus     String    @default("pending") @map("validation_status") // pending, approved, rejected
  validatedBy          String?   @map("validated_by")
  validatedByUser      User?     @relation("ValidatedAccounts", fields: [validatedBy], references: [id], onDelete: SetNull)
  validatedAt          DateTime? @map("validated_at")
  
  // Categorization
  accountType          String    @default("real_estate_agency") @map("account_type")
  tags                 String[]
  notes                String?
  
  // Scraping Config
  scrapingPriority     Int       @default(0) @map("scraping_priority")
  scrapeFrequencyHours Int       @default(24) @map("scrape_frequency_hours")
  lastScrapedAt        DateTime? @map("last_scraped_at")
  lastScrapePostCount  Int       @default(0) @map("last_scrape_post_count")
  
  // Source Tracking
  addedVia             String    @default("manual") @map("added_via") // manual, apify, csv, api, webhook
  addedBy              String?   @map("added_by")
  addedByUser          User?     @relation("AddedAccounts", fields: [addedBy], references: [id], onDelete: SetNull)
  
  createdAt            DateTime  @default(now()) @map("created_at")
  updatedAt            DateTime  @updatedAt @map("updated_at")
  
  posts                ScrapedPost[]
  jobs                 ScrapingJob[]
  
  @@unique([username, workspaceId])
  @@index([workspaceId])
  @@index([isValidated, isTracked])
  @@index([validationStatus])
  @@index([scrapingPriority])
  @@index([username])
  @@map("scraping_accounts")
}

model ScrapedPost {
  id                    String    @id @default(uuid())
  workspaceId           String    @map("workspace_id")
  workspace             Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  scrapingAccountId     String    @map("scraping_account_id")
  scrapingAccount       ScrapingAccount @relation(fields: [scrapingAccountId], references: [id], onDelete: Cascade)
  
  // Post Data
  igPostId              String    @map("ig_post_id")
  postUrl               String    @map("post_url")
  caption               String?
  mediaType             String?   @map("media_type") // PHOTO, VIDEO, CAROUSEL, REEL
  mediaUrl              String?   @map("media_url")
  
  // Engagement
  likeCount             Int       @default(0) @map("like_count")
  commentCount          Int       @default(0) @map("comment_count")
  postedAt              DateTime? @map("posted_at")
  
  // Property Detection
  detectedPropertyType  String?   @map("detected_property_type")
  detectedListingType   String?   @map("detected_listing_type")
  detectedCity          String?   @map("detected_city")
  detectedTown          String?   @map("detected_town")
  detectedPrice         String?   @map("detected_price")
  
  // Processing
  status                String    @default("pending") @map("status") // pending, processing, processed, error
  commentsScraped       Boolean   @default(false) @map("comments_scraped")
  commentsScrapedAt     DateTime? @map("comments_scraped_at")
  commentsScrapedCount  Int       @default(0) @map("comments_scraped_count")
  leadsExtractedCount   Int       @default(0) @map("leads_extracted_count")
  
  // Error Tracking
  errorMessage          String?   @map("error_message")
  retryCount            Int       @default(0) @map("retry_count")
  
  createdAt             DateTime  @default(now()) @map("created_at")
  updatedAt             DateTime  @updatedAt @map("updated_at")
  
  jobs                  ScrapingJob[]
  
  @@unique([igPostId, workspaceId])
  @@index([workspaceId])
  @@index([scrapingAccountId])
  @@index([status])
  @@index([postedAt])
  @@map("scraped_posts")
}

model ScrapingJob {
  id                  String    @id @default(uuid())
  workspaceId         String    @map("workspace_id")
  workspace           Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  // Job Config
  jobType             String    @map("job_type") // scrape_account_posts, scrape_post_comments, validate_account, enrichment
  priority            Int       @default(0)
  
  // Targets
  scrapingAccountId   String?   @map("scraping_account_id")
  scrapingAccount     ScrapingAccount? @relation(fields: [scrapingAccountId], references: [id], onDelete: Cascade)
  
  scrapedPostId       String?   @map("scraped_post_id")
  scrapedPost         ScrapedPost? @relation(fields: [scrapedPostId], references: [id], onDelete: Cascade)
  
  // Payload
  payload             Json      @default("{}")
  
  // Scheduling
  scheduledAt         DateTime  @default(now()) @map("scheduled_at")
  startedAt           DateTime? @map("started_at")
  completedAt         DateTime? @map("completed_at")
  
  // Status
  status              String    @default("queued") @map("status") // queued, running, completed, failed, cancelled
  progress            Int       @default(0)
  
  // Results
  result              Json?
  errorMessage        String?   @map("error_message")
  retryCount          Int       @default(0) @map("retry_count")
  maxRetries          Int       @default(3) @map("max_retries")
  
  // Worker
  workerId            String?   @map("worker_id")
  
  createdAt           DateTime  @default(now()) @map("created_at")
  updatedAt           DateTime  @updatedAt @map("updated_at")
  
  @@index([workspaceId])
  @@index([status, priority, scheduledAt])
  @@index([jobType])
  @@map("scraping_jobs")
}

model ScrapingConfig {
  id                              String   @id @default(uuid())
  workspaceId                     String   @unique @map("workspace_id")
  workspace                       Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  // Settings
  scrapingEnabled                 Boolean  @default(true) @map("scraping_enabled")
  autoApproveAccounts             Boolean  @default(false) @map("auto_approve_accounts")
  autoApproveFollowerThreshold    Int      @default(5000) @map("auto_approve_follower_threshold")
  
  // Rate Limits
  maxAccountsPerDay               Int      @default(100) @map("max_accounts_per_day")
  maxPostsPerAccount              Int      @default(50) @map("max_posts_per_account")
  maxCommentsPerPost              Int      @default(500) @map("max_comments_per_post")
  scrapingDelaySeconds            Int      @default(5) @map("scraping_delay_seconds")
  
  // Keywords
  bioKeywords                     String[] @default([]) @map("bio_keywords")
  commentKeywords                 String[] @default([]) @map("comment_keywords")
  excludeKeywords                 String[] @default([]) @map("exclude_keywords")
  
  // Property Detection
  propertyTypeKeywords            Json?    @map("property_type_keywords")
  listingTypeKeywords             Json?    @map("listing_type_keywords")
  cityKeywords                    String[] @default([]) @map("city_keywords")
  
  // Notifications
  notifyOnNewLeads                Boolean  @default(true) @map("notify_on_new_leads")
  notifyOnValidationNeeded        Boolean  @default(true) @map("notify_on_validation_needed")
  notificationEmail               String?  @map("notification_email")
  
  // API
  webhookUrl                      String?  @map("webhook_url")
  apiKeyHash                      String?  @map("api_key_hash")
  
  createdAt                       DateTime @default(now()) @map("created_at")
  updatedAt                       DateTime @updatedAt @map("updated_at")
  
  @@map("scraping_config")
}
